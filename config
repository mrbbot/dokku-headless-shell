#!/usr/bin/env bash
export HEADLESS_SHELL_IMAGE=${HEADLESS_SHELL_IMAGE:="chromedp/headless-shell"}
export HEADLESS_SHELL_IMAGE_VERSION=${HEADLESS_SHELL_IMAGE_VERSION:="latest"}
export HEADLESS_SHELL_IMAGE_ROOT=${HEADLESS_SHELL_IMAGE_ROOT:="/var/lib/dokku/services/headlessshell"}
export HEADLESS_SHELL_HOST_ROOT=${HEADLESS_SHELL_HOST_ROOT:=$HEADLESS_SHELL_ROOT}

export PLUGIN_UNIMPLEMENTED_SUBCOMMANDS=("backup" "backup-auth" "backup-deauth" "backup-schedule" "backup-schedule-cat" "backup-set-encryption" "backup-unschedule" "backup-unset-encryption" "clone" "connect" "export" "import")
export PLUGIN_COMMAND_PREFIX="headlessshell"
export PLUGIN_CONFIG_ROOT=${PLUGIN_CONFIG_ROOT:="$DOKKU_LIB_ROOT/config/$PLUGIN_COMMAND_PREFIX"}
export PLUGIN_DATA_ROOT=$HEADLESS_SHELL_ROOT
export PLUGIN_DATA_HOST_ROOT=$HEADLESS_SHELL_HOST_ROOT
export PLUGIN_PORTS=(9222)
export PLUGIN_WAIT_PORT=9222
export PLUGIN_DEFAULT_ALIAS="HEADLESS_SHELL"
export PLUGIN_DISABLE_PULL=${HEADLESS_SHELL_DISABLE_PULL:=}
export PLUGIN_DISABLE_PULL_VARIABLE="HEADLESS_SHELL_DISABLE_PULL"
export PLUGIN_ALT_ALIAS="DOKKU_HEADLESS_SHELL"
export PLUGIN_IMAGE=$HEADLESS_SHELL_IMAGE
export PLUGIN_IMAGE_VERSION=$HEADLESS_SHELL_IMAGE_VERSION
export PLUGIN_SCHEME="ws"
export PLUGIN_SERVICE="Headless Shell"
export PLUGIN_VARIABLE="HEADLESS_SHELL"
export PLUGIN_BASE_PATH="$PLUGIN_PATH"
if [[ -n $DOKKU_API_VERSION ]]; then
  export PLUGIN_BASE_PATH="$PLUGIN_ENABLED_PATH"
fi

if [[ -d "$PLUGIN_DATA_ROOT/*" ]]; then
  rm -rf "${PLUGIN_DATA_ROOT:?}/*"
fi
